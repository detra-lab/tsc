{
  "extends": "../base/tsconfig.json",

  "display": "Lit",

  "compilerOptions": {
    /* Modules */
    "module": "ESNext",
    "moduleResolution": "bundler",

    /* Emit */
    "noEmit": true,
    "sourceMap": false,

    /* Interop Constraints */
    "allowSyntheticDefaultImports": true,

    /* Language and Environment */
    "experimentalDecorators": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ES2020",
    "useDefineForClassFields": false
  }
}
