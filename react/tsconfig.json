{
  "extends": "../base/tsconfig.json",

  "display": "React",

  "compilerOptions": {
    /* Modules */
    "module": "ESNext",
    "moduleResolution": "Bundler",

    /* Emit */
    "noEmit": true,
    "sourceMap": false,

    /* Interop Constraints */
    "allowSyntheticDefaultImports": true,

    /* Language and Environment */
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"]
  }
}
