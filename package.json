{
  "name": "@detra-lab/tsc",
  "version": "0.2.5",
  "description": "A collection of tsconfig to extend in your own apps, tuned to a particular runtime environment.",
  "main": "./base/tsconfig.json",
  "exports": {
    ".": "./base/tsconfig.json",
    "./lit": "./lit/tsconfig.json",
    "./node/cjs": "./node/tsconfig.cjs.json",
    "./node/esm": "./node/tsconfig.esm.json",
    "./react": "./react/tsconfig.json"
  },
  "files": [
    "./base",
    "./lit",
    "./node",
    "./react"
  ],
  "prettier": "@detra-lab/prettier-config",
  "scripts": {
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@detra-lab/prettier-config": "^0.2.0",
    "@evilmartians/lefthook": "^1.4.3",
    "prettier": "^3.0.0"
  },
  "peerDependencies": {
    "@types/node": ">=16",
    "typescript": "^4.9 || ^5.0"
  },
  "peerDependenciesMeta": {
    "@types/node": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "Apache License 2.0",
  "author": {
    "name": "Detra",
    "email": "detra.lab@pm.me",
    "homepage": "https://github.com/detra-lab"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/detra-lab/tsc.git"
  },
  "bugs": {
    "url": "https://github.com/detra-lab/tsc/issues"
  },
  "keywords": [
    "ts-config",
    "typescript"
  ]
}
